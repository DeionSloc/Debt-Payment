<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Debt_Payment_Calculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Debt_Payment_Calculator.View"
    Title="Debt_Payment_Calculator"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <ShellContent
            Title="Loading"
            ContentTemplate="{DataTemplate view:Loading}"
            Route="Loading" />

        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:Dashboard}"
            Route="Dashboard"
            Shell.FlyoutBehavior="Disabled" />
    </TabBar>
</Shell>
