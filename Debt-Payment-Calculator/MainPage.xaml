<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Debt_Payment_Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Grid
                Padding="18"
                ColumnDefinitions=".75*, .25*"
                HorizontalOptions="Center"
                RowDefinitions="100, Auto, *">

                <Entry
                    Grid.Row="1"
                    Placeholder="UserName"
                    WidthRequest="250" />
                <Entry
                    Grid.Row="1"
                    Grid.Column="1"
                    Placeholder="Password"
                    WidthRequest="250" />

                <Button
                    Grid.Row="2"
                    Text="Login"
                    WidthRequest="250" />
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="Signup"
                    WidthRequest="250" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
